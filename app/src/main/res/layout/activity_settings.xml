<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Settings">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:onClick="launchHomePage"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="30dp"
        android:paddingTop="35dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="@string/settings"
        android:textColor="@color/dark_blue"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/magnifying_glass_logo"
        android:drawablePadding="10dp"
        android:hint="Search for a setting..."
        android:paddingStart="10dp"
        android:textColorHint="#B3B3B3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.35" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/txtcondition"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bg3"
            android:drawableEnd="@drawable/baseline_arrow_logo"
            android:drawablePadding="20dp"
            android:text="Account"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition3"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableEnd="@drawable/baseline_arrow_logo"
            android:drawablePadding="20dp"
            android:text="Edit Profile"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition5"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableEnd="@drawable/baseline_arrow_logo"
            android:drawablePadding="20dp"
            android:text="Privacy &amp; Security"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition6"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableEnd="@drawable/baseline_arrow_logo"
            android:drawablePadding="20dp"
            android:text="Help and Support"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <EditText
            android:id="@+id/txtcondition8"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg3"
            android:drawableEnd="@drawable/baseline_arrow_logo"
            android:drawablePadding="20dp"
            android:text="About"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--        android:drawableStart="@drawable/help_circle_logo"-->

        <View
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#B8B7B7" />

        <Button
            android:id="@+id/logOut"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg6"
            android:onClick="SignIn"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>